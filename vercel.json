{
  "crons": [
    {
      "path": "/api/cron/validate-payments",
      "schedule": "0 */30 * * * *"
    }
  ],
  "functions": {
    "app/api/cron/validate-payments/route.ts": {
      "maxDuration": 300
    },
    "app/api/mercadopago/webhook/route.ts": {
      "maxDuration": 60
    },
    "app/api/admin/sync-payments/route.ts": {
      "maxDuration": 180
    }
  },
  "headers": [
    {
      "source": "/api/mercadopago/webhook",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, x-signature, x-request-id"
        }
      ]
    }
  ]
}